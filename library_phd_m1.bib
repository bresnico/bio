@inproceedings{gay2018b,
  title = {{Quelles comp\'etences \'emotionnelles des \'el\`eves pour g\'erer leur anxi\'et\'e ?}},
  booktitle = {{Congr\`es de la Soci\'et\'e suisse pour la recherche en \'education (SSRE)}},
  author = {Gay, Philippe and Bressoud, Nicolas and Richard, Syvlie and Kappeler, Gabriel and Gomez, Jean-Marc},
  year = {2018},
  address = {{Z\"urich, Suisse}},
  abstract = {La conscience \'emotionnelle (i.e., diff\'erencier, exprimer analyser et faire attention \`a ses propres \'emotions et \`a celles d'autrui, Lahaye et al., 2011, p. 418) contribue \`a la sant\'e physique et psychique des enfants ainsi que leur bien-\^etre social (p.ex., Sendzik et al., 2017). Dans le but d'explorer les relations entre diff\'erentes facettes de la conscience \'emotionnelle et de l'anxi\'et\'e, huit classes d'\'el\`eves (N = 158 ; M-\^age = 11.4 ans [{$\pm$}0.68], 46.8\% de filles) ont rempli le Emotion Awareness Questionnaire revised (EAQ-30) (Lahaye et al., 2011) \textendash{} permettant d'\'evaluer six facettes de la conscience \'emotionnelle \textendash{} et les \'echelles d'anxi\'et\'e Multidimensional Anxiety Scale for Children (MASC) (Turgeon et al., 2006) et Test Anxiety Scale (TAS, Gomez \& Gay, 2017). Les analyses de r\'egression multiple incluant l'\^age, le genre, les notes moyennes des \'el\`eves et les six dimensions du EAQ comme variables ind\'ependantes ont principalement fait ressortir que 1)	Diff\'erencier les \'emotions pr\'edisait des difficult\'es cognitives (TAS) ({$\beta$}=-.403) et diff\'erents sympt\^omes somatiques (TAS et MASC), ce qui sugg\`ere que d\'evelopper cette comp\'etence \'emotionnelle pourrait r\'eduire le stress li\'e aux examens. Il s'agirait donc d'apprendre aux \'el\`eves \`a diff\'erencier diverses \'emotions et \`a localiser leurs ant\'ec\'edents, en particulier chez les enfants en difficult\'e scolaire. Dans cette optique, m\^eme un bref entra\^inement \`a la compr\'ehension des \'emotions s'av\`ere efficace (Sprung et al., 2015). 2)	Partager ses \'emotions pr\'edisait l'anxi\'et\'e sociale (MASC) ({$\beta$}=-.386) et diff\'erentes formes d'\'evitement, ce qui souligne l'importance d'exprimer des \'emotions et sugg\`ere qu'aider les enfants \`a apprendre \`a partager leurs \'emotions pourrait r\'eduire de nombreux sympt\^omes anxieux ; 3)	Enfin, la conscience corporelle pr\'edisait l'anxi\'et\'e de s\'eparation (MASC) ({$\beta$}=287) et diff\'erents sympt\^omes somatiques (MASC et TAS). Des interventions bas\'ees sur la pleine conscience pr\'esenteraient donc un int\'er\^et particulier pour favoriser une conscience \'emotionnelle adaptative (Zoogman, Goldberg, Hoyt, \& Miller, 2015).},
  language = {fr}
}

